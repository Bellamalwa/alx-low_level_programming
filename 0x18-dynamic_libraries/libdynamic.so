int _atoi(char *s)
{
    int n = 0;
    int i = 0;

    while (s[i] != '\0')
    {
        if (s[i] >= '0' && s[i] <= '9')
        {
            n = n * 10 + (s[i] - '0');
        }
        else
        {
            break;
        }

        i++;
}

return (n);
